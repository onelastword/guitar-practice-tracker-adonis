{% extends 'master' %}

{% block content %}
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-10 is-offset-1">
        <form action="/set-lists/{{id}}/add-song" method="POST" class="card is-fullwidth">
          {{ csrfField }}

          <div class="card-header">
            <h2 class="card-header-title">
              Add Song to Set List
            </h2>
          </div>
          <div class="card-content">
            {% for error in flashMessages.errors %}
            <div class="notification is-danger">
              <button class="delete"></button>
              <p>{{error.message}}</p>
            </div>
            {% endfor %}

            <label class="label">Select Song</label>
            <p class="control">
              <span class="select is-fullwidth">
                {{ form.select('song_id', songOptions, null, 'Select Song') }}
              </span>
            </p>
          </div>

          <footer class="card-footer">
            <a class="card-footer-item" href="/songs">Back</a>
            <button class="card-footer-item">Save</button>
          </footer>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock %}
